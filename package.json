{
	"name": "svelte-path",
	"version": "0.0.1",
	"description": "Modern Svelte routing",
	"keywords": [
		"svelte",
		"router",
		"spa"
	],
	"homepage": "https://github.com/colinlienard/svelte-path",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/colinlienard/svelte-path.git"
	},
	"bugs": {
		"url": "https://github.com/colinlienard/svelte-path/issues"
	},
	"license": "MIT",
	"type": "module",
	"exports": {
		"source": "./src/index.ts",
		"svelte": "./dist/index.js",
		"import": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"scripts": {
		"example:basic": "pnpm --filter example-basic dev",
		"build": "pkgroll --clean-dist",
		"test": "vitest",
		"check": "tsc --noEmit && pnpm -r check",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --check",
		"format:fix": "prettier . --write",
		"sherif": "sherif -r root-package-private-field",
		"sherif:fix": "sherif  -r root-package-private-field --fix"
	},
	"peerDependencies": {
		"svelte": "^5"
	},
	"devDependencies": {
		"@eslint/js": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^2.46.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"globals": "^15.12.0",
		"pkgroll": "^2.5.1",
		"prettier": "^3.3.3",
		"prettier-plugin-css-order": "^2.1.2",
		"prettier-plugin-svelte": "^3.2.8",
		"sherif": "^1.0.1",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.14.0",
		"vitest": "^2.1.5"
	},
	"packageManager": "pnpm@9.14.2"
}
